{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "semi": [
            "error",
            "always"
        ],
        "use-isnan": "error",
        "for-direction": "error",
        "eqeqeq": "warn",
        "no-control-regex":"off",
        "no-useless-escape":"off"
    }
}
